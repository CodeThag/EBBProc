@model EBBProc.Models.RegisterViewModel
@{
    ViewBag.Title = "Create an account";
    Layout = "~/Views/Shared/_StagbAccessControlLayout.cshtml";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h1 class="ui header center aligned">
        <img src="~/Content/theme/stagb/img/logo.png" alt="stagblogo" class="ui image">
        <div class="content">
        </div>
    </h1>
    <h4>@ViewBag.Title.</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <hr />
    <div class="field">
        @Html.LabelFor(m => m.Email)
        <div class="ui fluid icon input">
            @Html.TextBoxFor(m => m.Email, new { @style = "width:100%!important;min-width:100%;width:100%;" })
        </div>
    </div>
    <div class="field">
        @Html.LabelFor(m => m.Password)
        <div class="ui fluid icon input">
            @Html.PasswordFor(m => m.Password, new { @style = "width:100%!important;min-width:100%;width:100%;" })
        </div>
    </div>
    <div class="field">
        @Html.LabelFor(m => m.ConfirmPassword)
        <div class="ui fluid icon input">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @style = "width:100%!important;min-width:100%;width:100%;" })
        </div>
    </div>
    <div class="field">
        <input type="submit" class="ui teal right labeled icon button fluid" value="Register" />
        <a class="ui blue right labeled icon button fluid" href="@Url.Action("Login")">
            Sign In
            <i class="icon step backward"></i>
        </a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
